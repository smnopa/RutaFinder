---

import Layout from '../layouts/Layout.astro';
---

<Layout isHomePage={false} title="RutaFinder-Login">
<main class="relative h-screen">
    
    <div class="block md:hidden absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('../img/cartagena.png');"></div>

    
    <div class="flex flex-col md:flex-row justify-center items-center h-full relative">
        
        <div class="hidden md:block md:w-1/2 h-full">
            <img src="../img/cartagena.png" alt="Imagen de login" class="w-full h-full object-cover">
        </div>

        
        <div class="w-full md:w-1/2 h-full flex flex-col justify-center items-center p-4 relative">
            <div class="w-full sm:w-72 h-10 button rounded-full shadow-lg bg-white py-3 px-6 mb-4 mt-6 flex justify-center items-center cursor-pointer transition duration-300 ease-in-out hover:bg-blue-700" id="google">
                <img src="../img/google 1.png" alt="Google Logo" class="w-7 h-7 mr-6">
                Iniciar sesión con Google
            </div>
            <div class="w-full sm:w-72 h-10 button rounded-full shadow-lg bg-white py-3 px-6 mb-4 mt-6 flex justify-center items-center cursor-pointer transition duration-300 ease-in-out hover:bg-blue-700" id="facebook">
                <img src="../img/facebook.png" alt="Facebook Logo" class="w-7 h-7 mr-2">
                Iniciar sesión con Facebook
            </div>
            <div class="w-full sm:w-72 h-10 button rounded-full shadow-lg bg-white py-3 px-6 mb-4 mt-6 flex justify-center items-center cursor-pointer transition duration-300 ease-in-out hover:bg-blue-700" id="apple">
                <img src="../img/Apple.png" alt="Apple Logo" class="w-6 h-7 mr-8">
                Iniciar sesión con Apple
            </div>
        </div>
    </div>
</main>
</Layout>


