---
import FooterOther from '../components/FooterOther.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout isHomePage={true} title="Página Principal">
	<main class="container mx-auto">
    <div class="titulo text-center mb-6">
        <h1 class="text-3xl font-bold mt-4">Explora la Magia de Nuestro Paraíso Colombiano</h1>
    </div>
    <div class="flex justify-center space-x-4 mb-6">
        <button class="border border-blue-500 rounded-lg p-4 hover:bg-blue-500 transition-all bg-white">
            <a href="/hoteles"><span class="flex flex-col items-center">
                <img src="../img/hotel.png" alt="hoteles" class="w-12 h-12 mb-2">
                Hoteles
            </span></a>
        </button>
        <button class="border border-blue-500 rounded-lg p-4 hover:bg-blue-500 transition-all bg-white">
            <a href="/actividades"><span class="flex flex-col items-center">
                <img src="../img/actividades.png" alt="actividades" class="w-12 h-12 mb-2">
                Actividades
            </span></a>
        </button>
        <button class="border border-blue-500 rounded-lg p-4 hover:bg-blue-500 transition-all bg-white">
            <a href="/restaurantes"><span class="flex flex-col items-center">
                <img src="../img/restaurante.png" alt="restaurantes" class="w-12 h-12 mb-2">
                Restaurantes
            </span></a>
        </button>
        <button class="border border-blue-500 rounded-lg p-4 hover:bg-blue-500 transition-all bg-white">
            <a href="/paquetes"><span class="flex flex-col items-center">
                <img src="../img/paquetes.png" alt="hoteles" class="w-12 h-12 mb-2">
                Paquetes todo en uno!!
            </span></a>
        </button>
    </div>

    <!-- Barra de búsqueda -->
    <div class="group relative w-full max-w-lg mx-auto mb-6">
        <a href="resultados.html" class="absolute top-3 left-3">
            <svg class="icon w-6 h-6 text-gray-500" aria-hidden="true" viewBox="0 0 24 24">
                <g>
                    <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                </g>
            </svg>
        </a>
        <input placeholder="Dónde ir, qué hacer, hoteles" type="search" class="input pl-10 w-full py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>

    <!-- Slider -->
    <div class="relative max-w-4xl mx-auto overflow-hidden rounded-lg">
        <div class="slider flex">
            <div class="slide w-full flex-shrink-0 relative">
                <img src="../img/Playas.jpg" alt="playas" class="w-full h-full object-cover rounded-lg">
                <div class="slide-content absolute bottom-0 left-0 bg-black bg-opacity-50 p-4 rounded-lg text-white">
                    <h2 class="text-xl font-semibold">Estas son las mejores playas de Colombia</h2>
                    <button class="btn-ver-mas mt-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition">Ver más</button>
                </div>
            </div>
            <!-- Repite para las demás diapositivas -->
        </div>

        <!-- Botones de navegación -->
        <button class="prev absolute top-1/2 left-0 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-md hover:bg-gray-200 transition">&#10094;</button>
        <button class="next absolute top-1/2 right-0 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-md hover:bg-gray-200 transition">&#10095;</button>
    </div>

    <!-- Paginación -->
    <div class="pagination flex justify-center space-x-2 mt-4">
        <span class="dot h-3 w-3 bg-gray-300 rounded-full cursor-pointer"></span>
        <span class="dot h-3 w-3 bg-gray-300 rounded-full cursor-pointer"></span>
        <span class="dot h-3 w-3 bg-gray-300 rounded-full cursor-pointer"></span>
    </div>
</main>
</Layout>
<FooterOther/>
