<div class="relative w-full max-w-5xl mx-auto overflow-hidden">
<!-- Slides Wrapper -->
<div id="slider" class="flex transition-transform duration-500 ease-in-out">
    <!-- Slide 1 -->
    <div class="relative w-full flex-shrink-0">
        <img src="../img/Playas.jpg" alt="playas" class="w-full h-96 object-cover rounded-xl">
        <div class="absolute bottom-8 left-8 bg-black bg-opacity-60 text-white p-6 rounded-lg">
            <h2 class="text-2xl font-semibold">Estas son las mejores playas de Colombia</h2>
            <button class="mt-4 btn-ver-mas">Ver más</button>
        </div>
    </div>

<!-- Slide 2 -->
    <div class="relative w-full flex-shrink-0">
        <img src="../img/lugar turistico.png" alt="lugares turisticos" class="w-full h-96 object-cover rounded-xl">
        <div class="absolute bottom-8 left-8 bg-black bg-opacity-60 text-white p-6 rounded-lg">
            <h2 class="text-2xl font-semibold">Estos son los mejores lugares turísticos de Colombia</h2>
            <button class="mt-4 btn-ver-mas">Ver más</button>
        </div>
    </div>

<!-- Slide 3 -->
    <div class="relative w-full flex-shrink-0">
        <img src="../img/comidas tipicas.jpg" alt="comidas tipicas" class="w-full h-96 object-cover rounded-xl">
        <div class="absolute bottom-8 left-8 bg-black bg-opacity-60 text-white p-6 rounded-lg">
            <h2 class="text-2xl font-semibold">Estos son los mejores platos de comida en Colombia</h2>
            <button class="mt-4 btn-ver-mas">Ver más</button>
        </div>
    </div>
</div>

<!-- Buttons for navigation -->
<button id="prev" class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-white p-6 rounded-r-lg shadow-lg text-gray-800 text-2xl">
    &#10094;
</button>
<button id="next" class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-white p-6 rounded-l-lg shadow-lg text-gray-800 text-2xl">
    &#10095;
</button>
</div>

<!-- Button Styles -->
<style>
.btn-ver-mas {
    @apply text-white border-2 border-blue-500 px-6 py-3 rounded-lg transition duration-500 ease-in-out;
}
.btn-ver-mas:hover {
    background-color: #017bff;
    color: white;
}
</style>

<script>
  // Seleccionar elementos
  const slider = document.getElementById('slider');
  const slides = slider ? slider.children : null;
  const prevBtn = document.getElementById('prev');
  const nextBtn = document.getElementById('next');

  let currentIndex = 0;

  // Función para actualizar la posición del slider
  function updateSlider() {
    if (slider) {
      const offset = -currentIndex * 100;
      slider.style.transform = `translateX(${offset}%)`;
    }
  }

  // Evento para botón "Siguiente"
  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      if (slides) {
        currentIndex = (currentIndex + 1) % slides.length;
        updateSlider();
      }
    });
  }

  // Evento para botón "Anterior"
  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      if (slides) {
        currentIndex = (currentIndex - 1 + slides.length) % slides.length;
        updateSlider();
      }
    });
  }
</script>
