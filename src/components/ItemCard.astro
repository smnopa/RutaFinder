---
export interface Props {
  id: string;
  nombre: string;
  img: string;
  descripcion: string;
  linkBase: string; // Base del enlace (por ejemplo, "hoteles", "restaurantes", etc.)
}

const { id, nombre, img, descripcion, linkBase } = Astro.props;
---

<article class="flex bg-white rounded-2xl shadow-lg overflow-hidden max-w-md m-4">
  <header class="flex w-full">
    <!-- Imagen del hotel -->
    <img
      src={img}
      alt={nombre}
      class="w-1/2 object-cover rounded-2xl"
    />

    <!-- Contenido de la tarjeta -->
    <div class="p-4 flex flex-col justify-between w-1/2">
      <!-- Nombre del hotel -->
      <strong class="text-lg font-semibold text-center">{nombre}</strong>

      <!-- Descripción -->
      <span class="text-sm text-gray-600 mt-2">
        {descripcion}
      </span>

      <!-- Botón de detalles -->
      <div class="flex justify-center">
        <a href={`/${id}`}>
          <button class="mt-4 bg-blue-500 text-white w-36 rounded-xl hover:bg-blue-600">
            Más detalles
          </button>
        </a>
      </div>
    </div>
  </header>
</article>
